---
import NavLink from "./NavLink.astro";
import HeaderLink from "./HeaderLink.astro";
import HeaderLinkSocial from "./HeaderLinkSocial.astro";
import logo from "../../assets/logo-far-away.webp";
---

<header>
  <div class="container mx-auto px-2">
    <div class="flex items-center justify-end py-2 md:justify-between">
      <img
        src={logo.src}
        alt="Logo Far Away"
        class="hidden h-16 w-auto md:block"
      />
      <div class="flex w-full flex-col gap-2 md:w-auto md:gap-1">
        <div
          class="flex flex-wrap items-center gap-x-1 gap-y-1 justify-center md:justify-end"
        >
          <HeaderLinkSocial link="#" name="ion:logo-facebook" />
          <HeaderLinkSocial link="#" name="ion:logo-instagram" />
          <HeaderLinkSocial link="#" name="ion:logo-tiktok" />
          <HeaderLink link="#" text="Reviews" className="" />
          <HeaderLink link="#" text="Blogs" className="" />
          <HeaderLink link="#" text="Nosotros" className="" />
          <HeaderLink
            link="#"
            text="Terminos y condiciones"
            className="hidden sm:block"
          />
        </div>
        <div
          class="flex flex-wrap items-center justify-center md:justify-end gap-2"
        >
          <a
            href="#"
            class="flex items-center gap-1 px-2 py-1 text-sm font-medium transition-all duration-300 hover:text-primary md:text-base"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="19"
              height="19"
              viewBox="0 0 19 19"
              fill="none"
            >
              <path
                d="M3 1H7L9 6L6.5 7.5C7.57096 9.67153 9.32847 11.429 11.5 12.5L13 10L18 12V16C18 16.5304 17.7893 17.0391 17.4142 17.4142C17.0391 17.7893 16.5304 18 16 18C12.0993 17.763 8.42015 16.1065 5.65683 13.3432C2.8935 10.5798 1.23705 6.90074 1 3C1 2.46957 1.21071 1.96086 1.58579 1.58579C1.96086 1.21071 2.46957 1 3 1Z"
                stroke="#AA5C00"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"></path>
            </svg>
            +51 987 654 321
          </a>
          <a
            href="#"
            class="flex items-center gap-1 px-2 py-1 text-sm font-medium transition-all duration-300 hover:text-primary md:text-base hidden sm:flex"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
            >
              <path
                d="M3 7C3 6.46957 3.21071 5.96086 3.58579 5.58579C3.96086 5.21071 4.46957 5 5 5H19C19.5304 5 20.0391 5.21071 20.4142 5.58579C20.7893 5.96086 21 6.46957 21 7M3 7V17C3 17.5304 3.21071 18.0391 3.58579 18.4142C3.96086 18.7893 4.46957 19 5 19H19C19.5304 19 20.0391 18.7893 20.4142 18.4142C20.7893 18.0391 21 17.5304 21 17V7M3 7L12 13L21 7"
                stroke="#AA5C00"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"></path>
            </svg>
            info@farawayexpeditions.com
          </a>
          <a
            href="#"
            class="flex items-center gap-1 rounded-sm bg-primary px-4 py-2 text-sm font-medium text-white transition-all duration-200 hover:-translate-y-[1px] hover:opacity-90 md:text-base"
          >
            Contactanos
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="16"
              height="14"
              viewBox="0 0 16 14"
              fill="none"
            >
              <path
                d="M1 7H15M15 7L9 13M15 7L9 1"
                stroke="white"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"></path>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </div>
  <nav class="bg-stone-950 flex justify-between md:justify-center">
    <img
      src={logo.src}
      alt="Logo Far Away"
      class="h-16 w-auto block md:hidden px-4"
    />
    <img
      src={logo.src}
      alt="Logo Far Away"
      class="h-16 w-auto block md:hidden px-4"
    />
    <ul
      class="hidden md:flex min-w-max items-center justify-center gap-3 overflow-x-auto whitespace-nowrap px-2 py-1 text-sm md:min-w-0 md:justify-center md:gap-4 md:text-base"
    >
      <li><NavLink link="#" text="Inicio" /></li>
      <li><NavLink link="#" text="Destinos" /></li>
      <li><NavLink link="#" text="Paquetes" /></li>
      <li><NavLink link="#" text="Full Day" /></li>
      <li><NavLink link="#" text="Trekking" /></li>
    </ul>
  </nav>
</header>
