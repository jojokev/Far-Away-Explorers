---
import logoAsset from "../assets/logo-far-away.webp";
import avatar from "../assets/icons/metodos-pago.webp";
import reclamaciones from "../assets/icons/reclamaciones.webp";
import esnna from "../assets/icons/esnna.webp";
import { Icon } from "astro-icon/components";

const logo = logoAsset.src;
const protectedBadge = esnna.src;
const claimsBook = reclamaciones.src;
const paymentMethods = avatar.src;

const destinations = ["Arequipa", "Puno", "Cusco", "Nazca", "Ica", "Lima"];
const aboutLinks = [
  "Contact Us",
  "Our Blog",
  "Our Quality Policy",
  "Terminos y condiciones",
  "About Us",
];
const packages = [
  "Huacachina, Machupicchu, Isla Uros Puno",
  "Huacachina, MachupicLima, Isla Palomino",
  "Lima, Ica, Huacachina, Machupicchu",
  "Senderismo en la Naturaleza",
  "Trekking en las Montañas",
  "Cusco, Machupicchu, Laguna Humantay",
];
---

<footer class="border-t-2 border-[#aa5c00]">
  <section class="container mx-auto px-2 py-10 md:py-14">
    <div
      class="grid w-full grid-cols-1 gap-12 lg:grid-cols-[1fr_1.1fr] lg:gap-16"
    >
      <div class="flex flex-col gap-6">
        <div class="flex flex-col gap-1">
          <img
            src={logo}
            alt="Far Away Explorers"
            class="h-20 w-[151px] object-contain"
          />
          <p class="text-base tracking-[0.2px] text-black">
            <span class="font-medium leading-5">Business name:</span>
            <span class="leading-6"> Far Away explorer</span>
          </p>
          <p class="text-base tracking-[0.2px] text-black">
            <span class="font-medium leading-5">RUC:</span>
            <span class="leading-6"> 2009879456123146</span>
          </p>
        </div>

        <div class="flex flex-col">
          <a
            href="mailto:infor@farawayexplorer.com"
            class="flex items-center gap-1 border-b border-dashed border-[#ddd] pb-1 text-base tracking-[0.2px] text-black transition-opacity hover:opacity-80"
          >
            <Icon
              name="ion:mail-outline"
              class="size-6 text-[#aa5c00]"
              aria-hidden="true"
            />
            infor@farawayexplorer.com
          </a>
          <a
            href="mailto:reservas@farawayexplorer.com"
            class="flex items-center gap-1 border-b border-dashed border-[#ddd] pb-1 text-base tracking-[0.2px] text-black transition-opacity hover:opacity-80"
          >
            <Icon
              name="ion:mail-outline"
              class="size-6 text-[#aa5c00]"
              aria-hidden="true"
            />
            reservas@farawayexplorer.com
          </a>
          <a
            href="tel:+51987654231"
            class="flex items-center gap-1 border-b border-dashed border-[#ddd] pb-1 text-base tracking-[0.2px] text-black transition-opacity hover:opacity-80"
          >
            <Icon
              name="ion:call-outline"
              class="h-[17px] w-[17px] text-[#aa5c00]"
              aria-hidden="true"
            />
            +51 987 654 231
          </a>
          <a
            href="#"
            class="flex items-start gap-1 border-b border-dashed border-[#ddd] pb-1 text-base tracking-[0.2px] text-black transition-opacity hover:opacity-80"
          >
            <Icon
              name="ion:location-outline"
              class="mt-0.5 h-5 w-[14px] text-[#aa5c00]"
              aria-hidden="true"
            />
            <span>
              <span class="font-medium leading-5">Oficina principal:</span>
              <span class="leading-6">
                Urb. Cusco ll-3 / Santiago Y - 12 B</span
              >
            </span>
          </a>
        </div>

        <div class="flex flex-col gap-2">
          <p
            class="text-base font-semibold leading-5 tracking-[0.2px] text-black"
          >
            Follow us :
          </p>
          <div class="flex flex-wrap items-center gap-4">
            <a
              href="#"
              aria-label="TikTok"
              class="flex h-[36px] items-center justify-center gap-2.5 rounded-[99px] bg-[#aa5c00] px-2.5 py-4 transition-transform hover:scale-[1.04]"
            >
              <Icon
                name="ion:logo-tiktok"
                class="size-5 text-white"
                aria-hidden="true"
              />
            </a>
            <a
              href="#"
              aria-label="Facebook"
              class="flex h-[36px] items-center justify-center gap-2.5 rounded-[99px] bg-[#aa5c00] px-2.5 py-4 transition-transform hover:scale-[1.04]"
            >
              <Icon
                name="ion:logo-facebook"
                class="size-5 text-white"
                aria-hidden="true"
              />
            </a>
            <a
              href="#"
              aria-label="YouTube"
              class="flex h-[36px] items-center justify-center gap-2.5 rounded-[99px] bg-[#aa5c00] px-2.5 py-4 transition-transform hover:scale-[1.04]"
            >
              <Icon
                name="ion:logo-youtube"
                class="size-5 text-white"
                aria-hidden="true"
              />
            </a>
            <a
              href="#"
              aria-label="WhatsApp"
              class="flex h-[36px] items-center justify-center gap-2.5 rounded-[99px] bg-[#aa5c00] px-2.5 py-4 transition-transform hover:scale-[1.04]"
            >
              <Icon
                name="ion:logo-whatsapp"
                class="size-5 text-white"
                aria-hidden="true"
              />
            </a>
            <a
              href="#"
              aria-label="Instagram"
              class="flex h-[36px] items-center justify-center gap-2.5 rounded-[99px] bg-[#aa5c00] px-2.5 py-4 transition-transform hover:scale-[1.04]"
            >
              <Icon
                name="ion:logo-instagram"
                class="size-5 text-white"
                aria-hidden="true"
              />
            </a>
          </div>
        </div>

        <div class="flex items-center gap-[15px]">
          <img
            src={protectedBadge}
            alt="Protégenos"
            class="h-[50px] w-[130px] object-contain"
          />
          <img
            src={claimsBook}
            alt="Libro de Reclamaciones"
            class="h-[50px] w-[87px] object-contain"
          />
        </div>
      </div>

      <div class="flex flex-col gap-4 tracking-[0.2px] text-black">
        <h2 class="text-lg font-semibold leading-5 text-[#aa5c00]">MENU</h2>

        <div class="grid grid-cols-1 gap-8 sm:grid-cols-2">
          <div class="flex flex-col gap-8">
            <div class="flex flex-col gap-2">
              <h3 class="text-base font-semibold leading-5">Destinos</h3>
              <ul class="flex flex-col gap-1 pl-3 text-base leading-6">
                {
                  destinations.map((item) => (
                    <li>
                      <a href="#" class="transition-opacity hover:opacity-80">
                        {item}
                      </a>
                    </li>
                  ))
                }
              </ul>
            </div>

            <div class="flex flex-col gap-2">
              <h3 class="text-base font-semibold leading-5">Who we are</h3>
              <ul class="flex flex-col gap-1 pl-3 text-base leading-6">
                {
                  aboutLinks.map((item) => (
                    <li>
                      <a href="#" class="transition-opacity hover:opacity-80">
                        {item}
                      </a>
                    </li>
                  ))
                }
              </ul>
            </div>
          </div>

          <div class="flex flex-col gap-2">
            <h3 class="text-base font-semibold leading-5">Paquetes</h3>
            <ul class="flex flex-col gap-1 pl-3 text-base leading-6">
              {
                packages.map((item) => (
                  <li>
                    <a href="#" class="transition-opacity hover:opacity-80">
                      {item}
                    </a>
                  </li>
                ))
              }
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>

  <div class="bg-[#aa5c00]">
    <div
      class="container mx-auto flex flex-col items-center justify-between gap-3 px-2 py-2 md:flex-row md:py-0"
    >
      <p
        class="text-center text-base leading-6 tracking-[0.2px] text-white md:text-left"
      >
        copyright © 2024 Chullpi Expeditions todos los derechos
      </p>

      <div
        class="flex flex-col items-center gap-1 py-1 md:items-start md:p-[10px]"
      >
        <p
          class="text-sm font-medium leading-[22px] tracking-[0.2px] text-white"
        >
          Metodos de pago:
        </p>
        <img
          src={paymentMethods}
          alt="Metodos de pago"
          class="h-auto w-[136px] object-contain"
        />
      </div>
    </div>
  </div>
</footer>
