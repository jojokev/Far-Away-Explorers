---
import borderTop from "../assets/icons/border-01.png";
import borderButton from "../assets/icons/border-02.png";

const whyUsWaveImage = borderTop.src;
const whyUsItemIcon =
  "https://www.figma.com/api/mcp/asset/916b1851-ef10-4574-81b5-3f6c96da842c";
const whyUsBottomWaveImage = borderButton.src;

const whyUsItems = Array.from({ length: 6 }, () => ({
  title: "Quality Guaranteed",
  description:
    "With the highest quality standards, provide maximum value for money to our clients.",
}));
---

<section>
  <img
    src={whyUsWaveImage}
    alt="Decorative wave"
    class="h-auto w-full"
    loading="lazy"
  />
  <div class="bg-primary">
    <div class="container mx-auto px-2 py-10 md:py-14">
      <div
        class="flex w-full flex-col items-start gap-2 text-center not-italic text-white"
      >
        <p class="w-full text-base font-bold leading-5 tracking-[0.2px]">
          DESTINOS
        </p>
        <h2 class="w-full text-[30px] font-bold leading-7">HAPPY TRAVELERS</h2>
      </div>

      <div
        class="mt-10 grid w-full grid-cols-1 gap-8 sm:grid-cols-2 lg:mt-16 lg:grid-cols-3 lg:gap-x-10 lg:gap-y-10"
      >
        {
          whyUsItems.map((item) => (
            <article class="flex items-start gap-4 text-white">
              <img
                src={whyUsItemIcon}
                alt=""
                aria-hidden="true"
                class="h-12 w-[50px] shrink-0"
                loading="lazy"
              />
              <div class="min-w-0">
                <h3 class="text-base font-semibold leading-5 tracking-[0.2px]">
                  {item.title}
                </h3>
                <p class="mt-2 text-base leading-5 tracking-[0.2px]">
                  {item.description}
                </p>
              </div>
            </article>
          ))
        }
      </div>
    </div>
  </div>
  <img
    src={whyUsBottomWaveImage}
    alt="Decorative bottom wave"
    class="h-auto max-h-[40px] w-full"
    loading="lazy"
  />
</section>
